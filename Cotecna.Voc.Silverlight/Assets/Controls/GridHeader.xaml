<UserControl x:Class="Cotecna.Voc.Silverlight.Assets.GridHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:local="clr-namespace:Cotecna.Voc.Silverlight.Assets"
    d:DesignHeight="30" d:DesignWidth="600">

    <Grid Background="{StaticResource Color_Blue}" Margin="0,0,0,0" >
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <!--Total records-->
        <StackPanel Margin="12,0,2,0" Grid.Column="0" Orientation="Horizontal" FlowDirection="LeftToRight" VerticalAlignment="Center" 
                    Visibility="{Binding IsHideIcons}" >
            <TextBlock  Text="{Binding HeaderText, Mode=OneWay}" 
                       VerticalAlignment="Center" HorizontalAlignment="Left" Style="{StaticResource Text_OnDarkBackground}" />
            <TextBlock Text="{Binding TotalRecords,Mode=OneWay}" 
                       VerticalAlignment="Center" HorizontalAlignment="Left" Style="{StaticResource Text_OnDarkBackground}"/>
        </StackPanel>

        <!--Buttons Section -->
        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button  Style="{StaticResource Control_PagerActionButtonVOC}"
                     Visibility="{Binding RelativeSource={RelativeSource AncestorType=local:GridHeader}, Path=CanExportRN}"
                     Name="exportRNCommand"
                     Command="{Binding ExportReleaseNotes}" >
                <StackPanel Orientation="Horizontal">
                    <Viewbox Width="15" Height="15" Margin="0,0,3,0">
                        <ContentControl Style="{StaticResource ExcelImage}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Viewbox>
                    <TextBlock TextWrapping="Wrap" VerticalAlignment="Center" Text="{Binding Translations.ReleaseNoteReport, Source={StaticResource ResourceWrapper}}" />
                </StackPanel>
            </Button>
            <Button  Style="{StaticResource Control_PagerActionButtonVOC}"
                     Visibility="{Binding RelativeSource={RelativeSource AncestorType=local:GridHeader}, Path=CanExportExcel}"
                     Command="{Binding ExportCommand}" >
                <StackPanel Orientation="Horizontal">
                    <Viewbox Width="15" Height="15" Margin="0,0,3,0">
                        <ContentControl Style="{StaticResource ExcelImage}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Viewbox>
                    <TextBlock TextWrapping="Wrap" VerticalAlignment="Center" Text="{Binding Translations.Export, Source={StaticResource ResourceWrapper}}" />
                </StackPanel>
            </Button>
        </StackPanel>

        <!--Paging Section-->
        <StackPanel Grid.Column="2" Orientation="Horizontal" 
                    Visibility="{Binding RelativeSource={RelativeSource AncestorType=local:GridHeader}, Path=CanPaging}"
                    HorizontalAlignment="Right" Margin="12,0,0,0" >
